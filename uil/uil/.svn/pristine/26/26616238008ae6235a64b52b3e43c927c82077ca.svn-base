<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FontSmall" parent="AppTheme">
        <item name="fontSmall">10sp</item>
        <item name="fontMedium">15sp</item>
        <item name="fontBig">20sp</item>
    </style>

    <style name="FontMedium" parent="AppTheme">
        <item name="fontSmall">15sp</item>
        <item name="fontMedium">20sp</item>
        <item name="fontBig">25sp</item>
    </style>

    <style name="FontBig" parent="AppTheme">
        <item name="fontSmall">20sp</item>
        <item name="fontMedium">25sp</item>
        <item name="fontBig">30sp</item>
    </style>

    <!-- Activity主题 为了防止activity启动时有瞬间白屏的现象 -->
    <style name="activityTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="window_no_title">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="fontStyleWhite" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">?attr/fontMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="fontStyleWhiteMedium" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">?attr/fontMedium</item>
        <!--
             <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        -->
    </style>

    <style name="fontStyleBlackMedium" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">?attr/fontMedium</item>
        <!--
             <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        -->
    </style>

    <style name="fontStyleBlackSmall" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">?attr/fontSmall</item>
        <!--
             <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        -->
    </style>

    <style name="fontStyleBlackBig" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">?attr/fontBig</item>
        <!--
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        -->
    </style>

    <style name="fontStyleGrayMedium" parent="android:Widget.TextView">
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:textSize">?attr/fontMedium</item>
        <!--
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        -->
    </style>

    <style name="fontStyleWhiteBig" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">?attr/fontBig</item>
         <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNone</item>
        <!--
             <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        -->
    </style>

    <style name="fontStyleWhiteSmall" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">?attr/fontSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="alert_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="dialog_blue_button" parent="@android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="settingContactBaseText" parent="@android:Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settingContactBtnText" parent="fontStyleBlackMedium">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/contact_edit_text_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/popu_enter</item>
        <item name="android:windowExitAnimation">@anim/popu_exit</item>
    </style>

    <style name="AnimationTopPopup">
        <item name="android:windowEnterAnimation">@anim/popu_top_enter</item>
    </style>

    <style name="TextFontBaseStyle" parent="@android:Widget.TextView">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

     <style name="EditBlackFontMedium" parent="@android:Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">?attr/fontSmall</item>
         <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:background">@drawable/contact_search_bg</item>
    </style>
    <!-- 手机号样式 -->
	<style name="PhoneEditStyle" parent="EditBlackFontMedium">
        <item name="android:maxLength">20</item>
    </style>
    <!-- 播放录音录像播放器 -->
    <style name="Transparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    <!-- 设置中上方操作按钮行 背景 -->
    <style name="edit_top_bg">
        <item name="android:background">#d7d7d7</item>
        <item name="android:padding">3dp</item>
    </style>

</resources>