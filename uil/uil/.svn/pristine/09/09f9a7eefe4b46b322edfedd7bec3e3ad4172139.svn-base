<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_top_edit_btns" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            style="@style/fontStyleWhiteMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_name" />

        <EditText
            android:id="@+id/edit_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white" >

            <requestFocus />
        </EditText>

        <TextView
            style="@style/fontStyleBlackMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".csv"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_file_path"
        style="@style/fontStyleWhiteMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_path"/>
     <include layout="@layout/fragment_file_browse" />
</LinearLayout>