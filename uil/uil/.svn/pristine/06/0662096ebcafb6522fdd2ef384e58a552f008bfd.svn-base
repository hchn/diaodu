<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <include layout="@layout/empty" />
    <LinearLayout
        android:id="@+id/linlay_top_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_black"
            style="@style/fontStyleWhiteMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_btn2"
            android:text="@string/contact_black_list" />

        <Button
            android:id="@+id/btn_white"
            style="@style/fontStyleWhiteMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_btn2"
            android:text="@string/contact_white_list" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_bottom_btns"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btn_manual"
            style="@style/fontStyleWhiteMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#d7d7d7"
            android:text="@string/add_list_manual"
            android:textColor="#1b1b1b" />

        <Button
            android:id="@+id/btn_contact"
            style="@style/fontStyleWhiteMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#d7d7d7"
            android:text="@string/add_list_from_contact"
            android:textColor="#1b1b1b" />

        <Button
            android:id="@+id/btn_record"
            style="@style/fontStyleWhiteMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#d7d7d7"
            android:text="@string/add_list_from_record"
            android:textColor="#1b1b1b" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_phone_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linlay_bottom_btns"
        android:layout_below="@id/linlay_top_tabs" >
    </ListView>

</RelativeLayout>