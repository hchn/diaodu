<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/member_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/conf_member_info_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/member_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/conf_member_icon_margin"
            android:src="@drawable/head_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/conf_member_icon_info_divide"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/member_name"
                style="@style/fontStyleWhiteBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"
                android:text="name" />

            <TextView
                android:id="@+id/member_number"
                style="@style/fontStyleWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="123456789" />

            <TextView
                android:id="@+id/conf_member_status"
                style="@style/fontStyleWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="会议中"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/conf_member_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/audio_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/conf_member_status_audio_on" />

        <ImageView
            android:id="@+id/video_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/conf_member_status_video_on" />

        <ImageView
            android:id="@+id/share_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/conf_member_status_share_off" />

        <ImageView
            android:id="@+id/conf_opr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/conf_member_opr_in" />
    </LinearLayout>

</LinearLayout>