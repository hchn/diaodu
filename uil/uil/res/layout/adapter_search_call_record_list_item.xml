<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true" >

    <RelativeLayout
        android:id="@+id/contact_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/search_item_contact_background"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/user_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/user_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_imageview"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name_textview"
                style="@style/fontStyleWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peer_name" />

            <TextView
                android:id="@+id/num_textview"
                style="@style/fontStyleWhiteMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peer_num" />
        </LinearLayout>

        <ImageView
            android:id="@+id/call_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <ListView
        android:id="@+id/dialcontact_detial_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_relativelayout"
        android:divider="@color/transparent"
        android:dividerHeight="5dp"
        android:scrollbars="none"
        android:visibility="gone" />

</RelativeLayout>